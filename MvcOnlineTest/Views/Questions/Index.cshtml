@model IEnumerable<Question>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <input type="checkbox" name="Select" value="" />
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Que)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OptionA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OptionB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OptionC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OptionD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
        <th></th>
    </tr>

@foreach (Question question in Model) {
    <tr>
        <td>
            <input type="checkbox" name="Select" value="@question.QuestionId" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => question.Que)
        </td>
        <td>
            @Html.DisplayFor(modelItem => question.OptionA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => question.OptionB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => question.OptionC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => question.OptionD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => question.Answer)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=question.QuestionId }) |
            @Html.ActionLink("Details", "Details", new { id=question.QuestionId }) |
            @Html.ActionLink("Delete", "Delete", new { id=question.QuestionId })
        </td>
    </tr>
}
</table>