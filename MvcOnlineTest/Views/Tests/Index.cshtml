@model IEnumerable<MvcOnlineTest.Models.Test>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.TestName)</th>

        <th>@Html.DisplayNameFor(model => model.MarksPerQue)</th>

        <th>Number of questions</th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.TestName)</td>

        <td>@Html.DisplayFor(modelItem => item.MarksPerQue)</td>

        <td>@item.Questions.Count</td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TestId }) |
            @Html.ActionLink("Add or remove questions", "Details", new { id=item.TestId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TestId })
        </td>
    </tr>
}

</table>